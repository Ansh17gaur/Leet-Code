class Solution(object):
    def commonChars(self, words):
        """
        :type words: List[str]
        :rtype: List[str]
        """
        from collections import Counter
        
        # Start with the character count of the first word
        common = Counter(words[0])
        
        # Intersect with character counts of the remaining words
        for word in words[1:]:
            common &= Counter(word)
        
        # Expand the result based on the frequency of each character
        result = []
        for char, freq in common.items():
            result.extend([char] * freq)
        
        return result
